@model IEnumerable<PetStore.Models.BasketItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasketId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasketId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BasketItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BasketItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BasketItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
