@model IEnumerable<PetStore.Models.Customer>
@{
    ViewData["Title"] = "CustomerLogin";
}

<h2>CustomerLogin</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Customer" asp-action="InitiateLogin" method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <input name="custId" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
